@model SoftwareGrid.DataLogic.Models.OrganizationDepartment

@{
    ViewBag.Title = "OrganizationDepartment";
    Layout = "~/Views/Shared/_LayoutOrganization.cshtml";
}

<div class="flat_area grid_16">
    <h2>
        Organization Department</h2>
</div>

<div class="box grid_16">
    <div class="block">
        <h2 class="box_head">
            Organization Department</h2>
		<fieldset>
<div class="form-item">
    @Html.LabelFor(model => model.DepartmentName)
    <div class="display-field">@Model.DepartmentName</div>
</div>
<div class="form-item">
    @Html.LabelFor(model => model.DepartmentCodeNumber)
    <div class="display-field">@Model.DepartmentCodeNumber</div>
</div>
<div class="form-item">
    @Html.LabelFor(model => model.DepartmentNumber)
    <div class="display-field">@String.Format("{0:F}", Model.DepartmentNumber)</div>
</div>
<div class="form-item">
    @Html.LabelFor(model => model.Description)
    <div class="display-field">@Model.Description</div>
</div>
<div class="form-item">
    @Html.LabelFor(model => model.Organization)
    <div class="display-field">@(Model.Organization == null ? "None" : Model.Organization.Name)</div>
</div>
<div class="form-item">
    @Html.LabelFor(model => model.OrganizationBusinessDivision)
    <div class="display-field">@Html.DisplayTextFor(_ => Model.OrganizationBusinessDivision).ToString()</div>
</div>
<div class="form-item">
    @Html.LabelFor(model => model.ParentDepartment)
    <div class="display-field">@Html.DisplayTextFor(_ => Model.ParentDepartment).ToString()</div>
</div>
		</fieldset>
		<div class="form-item">
	@Html.ActionLink("Edit", "Edit", new { id = Model.OrganizationDepartmentID, organizationId = ViewBag.OrganizationId }) |
	@Html.ActionLink("Back to List", "Index",new { organizationId = ViewBag.OrganizationId })
    
</div>
	</div>
</div>



