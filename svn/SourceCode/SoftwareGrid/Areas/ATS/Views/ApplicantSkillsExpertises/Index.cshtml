@model IEnumerable<SoftwareGrid.DataLogic.Models.ApplicantSkillsExpertise>
@using EasySoft.Helper;
@{
    ViewBag.Title = "Applicant Skills Expertise";
    Layout = "~/Views/Shared/_LayoutApplicant.cshtml";
}
<div class="flat_area grid_16">
    <h2>Applicant Skills Expertise List</h2>
    <p>
        @Html.ActionLink("Create New", "Create", new { applicantId = ViewBag.ApplicantId })
    </p>
</div>
<div style="clear:both;"></div>
<div class="box grid_16">
@(Html.Telerik().Grid(Model)
        .Name("Grid")
		.DataKeys(keys => keys.Add(c => c.ApplicantSkillsExpertiseID))
		.Columns(columns =>
        {
		columns.Bound(c => c.IsVerified).Title("Is  Verified ").Width("100px").Sortable(false).Groupable(true).Filterable(true); 
				columns.Template(
                @<text>
                    <center>
                        <a href="@Url.Action("Edit", "ApplicantSkillsExpertise", new { id = @item.ApplicantSkillsExpertiseID })" title="Edit"><img alt="Edit"  src="/content/images/edit.png" /></a>
                    </center>
                </text>
            ).HeaderTemplate(
                @<text>
                    <center>
                        <span>Edit</span>
                    </center>
                </text>
            ).Width("20px");
            columns.Template(
                @<text>
                    <center>
                        <a href="@Url.Action("Delete", "ApplicantSkillsExpertise", new { id = @item.ApplicantSkillsExpertiseID })" title="Delete" onclick="return confirmSubmit()"><img alt="Edit"  src="/content/images/delete.png" /></a>
                    </center>
                </text>
            ).HeaderTemplate(
                @<text>
                    <center>
                        <span>Delete</span>
                    </center>
                </text>
            ).Width("20px");
		})
		.Scrollable(scrolling => scrolling.Enabled(true))
        .Sortable(sorting => sorting.Enabled(true))
        .Pageable(paging => paging.Enabled(true))
        .Filterable(filtering => filtering.Filters(filters => 
        {
			        }))
        .Groupable(grouping => grouping.Enabled(true))
        .Footer(true)
)
</div>

