@model IEnumerable<SoftwareGrid.DataLogic.Models.ApplicantEmailTemplate>
@using EasySoft.Helper;
@{
    ViewBag.Title = "Applicant Email Template";
    Layout = "~/Views/Shared/_LayoutApplicant.cshtml";
}
<div class="flat_area grid_16">
    <h2>Applicant Email Template List</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</div>
<div style="clear:both;"></div>
<div class="box grid_16">
@(Html.Telerik().Grid(Model)
    .Name("Grid")
    .DataKeys(keys => keys.Add(c => c.ApplicantEmailTemplateID))
    .Columns(columns =>
                    {   
                        columns.AutoGenerate(column =>
                                                {
                                                    if (column.Member == "ApplicantEmailTemplateID")
                                                        column.Visible = false;
                                                });
						columns.Template(
							                @<text>
							                    <center>
							                        <a href="@Url.Action("Edit", "ApplicantEmailTemplate", new { id = @item.ApplicantEmailTemplateID })" title="Edit"><img alt="Edit"  src="/content/images/edit.png" /></a>
							                    </center>
							                </text>
							            ).HeaderTemplate(
							                @<text>
							                    <center>
							                        <span>Edit</span>
							                    </center>
							                </text>
							            ).Width("10px");
							            columns.Template(
							                @<text>
							                    <center>
							                        <a href="/ApplicantEmailTemplate/Delete/@item.ApplicantEmailTemplateID" title="Delete" onclick="return confirmSubmit()"><img alt="Edit"  src="/content/images/delete.png" /></a>
							                    </center>
							                </text>
							            ).HeaderTemplate(
							                @<text>
							                    <center>
							                        <span>Delete</span>
							                    </center>
							                </text>
							            ).Width("10px");
                    })
    .Sortable()
    .Pageable()
) 
</div>

