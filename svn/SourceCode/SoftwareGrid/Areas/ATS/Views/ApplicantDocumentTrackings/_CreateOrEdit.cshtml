			    @Html.DropDownListFor(model => model.ApplicantDocumentStatusCategoryID, ((IEnumerable<SoftwareGrid.DataLogic.Models.ApplicantDocumentStatusCategory>)ViewBag.PossibleApplicantDocumentStatusCategories).Select(option => new SelectListItem {
			        Text = (option == null ? "None" : option.Name), 
