								@Html.EditorFor(model => model.IsMandatory)
				            </div>
					
			<div class="required_tag"></div>
					</div>
		
		<div class="form-item">
            @Html.LabelFor(model => model.IsOriginalRequired)
            <div>
								@Html.EditorFor(model => model.IsOriginalRequired)
				            </div>
					
			<div class="required_tag"></div>
					</div>
		
		<div class="form-item">
            @Html.LabelFor(model => model.Instruction)
            <div>
								@Html.EditorFor(model => model.Instruction)
				            </div>
					</div>
		<div class="form-item">
			@Html.LabelFor(model => model.ApplicantDocumentID)
			<div class="editor-field">
			    @Html.DropDownListFor(model => model.ApplicantDocumentID, ((IEnumerable<SoftwareGrid.DataLogic.Models.ApplicantDocument>)ViewBag.PossibleApplicantDocuments).Select(option => new SelectListItem {
			        Text = Html.DisplayTextFor(_ => option).ToString(), 
			        Value = option.ApplicantDocumentID.ToString(),
