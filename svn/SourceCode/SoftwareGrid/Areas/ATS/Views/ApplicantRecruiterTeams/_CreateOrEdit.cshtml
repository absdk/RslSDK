
@model SoftwareGrid.DataLogic.Models.ApplicantRecruiterTeam

@* This partial view defines form fields that will appear when creating and editing entities *@

	<fieldset>
		@Html.ValidationSummary()
		<div class="form-item">
			@Html.LabelFor(model => model.ApplicantID)
			<div class="editor-field">
			    @Html.DropDownListFor(model => model.ApplicantID, ((IEnumerable<SoftwareGrid.DataLogic.Models.Applicant>)ViewBag.PossibleApplicants).Select(option => new SelectListItem {
			        Text = (option == null ? "None" : option.LastName), 
			        Value = option.ApplicantID.ToString(),
			        Selected = (Model != null) && (option.ApplicantID == Model.ApplicantID)
			    }), "Choose...")
			</div>
			<div class="required_tag"></div>
			</div>
				
		<div class="form-item">
            @Html.LabelFor(model => model.AssignedRecruiterUserID)
            <div>
								@Html.EditorFor(model => model.AssignedRecruiterUserID)
				            </div>
					</div>
		
		<div class="form-item">
            @Html.LabelFor(model => model.IsPrimaryRecruiter)
            <div>
								@Html.EditorFor(model => model.IsPrimaryRecruiter)
				            </div>
					
			<div class="required_tag"></div>
					</div>
		
		<div class="form-item">
            @Html.LabelFor(model => model.AssignDate)
            <div>
								@Html.EditorFor(model => model.AssignDate)
				            </div>
					</div>
		
		<div class="form-item">
            @Html.LabelFor(model => model.IsRemoved)
            <div>
								@Html.EditorFor(model => model.IsRemoved)
				            </div>
					
			<div class="required_tag"></div>
					</div>
	
		<div class="form-item">
			<div class="button_bar clearfix">
				<button class="green" type="submit">
						<span>Submit</span>
				</button>
			</div>
		</div>
	</fieldset>
