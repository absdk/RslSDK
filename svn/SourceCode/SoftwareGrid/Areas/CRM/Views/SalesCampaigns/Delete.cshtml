@model SoftwareGrid.DataLogic.Models.SalesCampaign

@{
    ViewBag.Title = "Sales Campaign";
}
<div class="flat_area grid_16">
    <h2>
        Sales Campaign</h2>
</div>
<div class="box grid_16">
    <div class="block">
        <h2 class="box_head">
            Are you sure you want to delete this?</h2>
@using (Html.BeginForm()) {
	<fieldset>
				<div class="form-item">
		    <label>CampaignName</label>
		    <div class="display-field">@Model.CampaignName</div>
		</div>
				<div class="form-item">
		    <label>CampaignDescription</label>
		    <div class="display-field">@Model.CampaignDescription</div>
		</div>
				<div class="form-item">
		    <label>CampaignLocation</label>
		    <div class="display-field">@Model.CampaignLocation</div>
		</div>
				<div class="form-item">
		    <label>PrimarySalesProductServiceID</label>
		    <div class="display-field">@Model.PrimarySalesProductServiceID</div>
		</div>
				<div class="form-item">
		    <label>ExpectedNumberOfSale</label>
		    <div class="display-field">@String.Format("{0:F}", Model.ExpectedNumberOfSale)</div>
		</div>
				<div class="form-item">
		    <label>ExpectedRevenue</label>
		    <div class="display-field">@String.Format("{0:F}", Model.ExpectedRevenue)</div>
		</div>
				<div class="form-item">
		    <label>CreatedDate</label>
		    <div class="display-field">@String.Format("{0:g}", Model.CreatedDate)</div>
		</div>
				<div class="form-item">
		    <label>StartDate</label>
		    <div class="display-field">@String.Format("{0:g}", Model.StartDate)</div>
		</div>
				<div class="form-item">
		    <label>EndDate</label>
		    <div class="display-field">@String.Format("{0:g}", Model.EndDate)</div>
		</div>
				<div class="form-item">
		    <label>ParentSalesCampaign</label>
		    <div class="display-field">@Html.DisplayTextFor(_ => Model.ParentSalesCampaign).ToString()</div>
		</div>
				<div class="form-item">
		    <label>CreatedByUser</label>
		    <div class="display-field">@(Model.CreatedByUser == null ? "None" : Model.CreatedByUser.LastName)</div>
		</div>
				<div class="form-item">
		    <label>Currency</label>
		    <div class="display-field">@(Model.Currency == null ? "None" : Model.Currency.Name)</div>
		</div>
				<div class="form-item">
		    <label>SalesCampaignStatusCategory</label>
		    <div class="display-field">@(Model.SalesCampaignStatusCategory == null ? "None" : Model.SalesCampaignStatusCategory.Name)</div>
		</div>
				<div class="form-item">
		    <label>SalesProductServiceCatelog</label>
		    <div class="display-field">@(Model.SalesProductServiceCatelog == null ? "None" : Model.SalesProductServiceCatelog.Title)</div>
		</div>
				<div class="form-item">
	<div class="button_bar clearfix">
			<button class="green" type="submit">
				<span>Delete</span>
			</button>
		</div>
	</div>
	</fieldset>
}
	</div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
	
