
@model SoftwareGrid.DataLogic.Models.RequisitionTeam

@* This partial view defines form fields that will appear when creating and editing entities *@

	<fieldset>
		@Html.ValidationSummary()
		<div class="form-item">
			@Html.LabelFor(model => model.RequisitionID)
			<div class="editor-field">
			    @Html.DropDownListFor(model => model.RequisitionID, ((IEnumerable<SoftwareGrid.DataLogic.Models.Requisition>)ViewBag.PossibleRequisitions).Select(option => new SelectListItem {
			        Text = Html.DisplayTextFor(_ => option).ToString(), 
			        Value = option.RequisitionID.ToString(),
			        Selected = (Model != null) && (option.RequisitionID == Model.RequisitionID)
			    }), "Choose...")
			</div>
			<div class="required_tag"></div>
			</div>
				<div class="form-item">
			@Html.LabelFor(model => model.RequisitionTeamCategoryID)
			<div class="editor-field">
			    @Html.DropDownListFor(model => model.RequisitionTeamCategoryID, ((IEnumerable<SoftwareGrid.DataLogic.Models.RequisitionTeamCategory>)ViewBag.PossibleRequisitionTeamCategories).Select(option => new SelectListItem {
			        Text = (option == null ? "None" : option.Name), 
			        Value = option.RequisitionTeamCategoryID.ToString(),
			        Selected = (Model != null) && (option.RequisitionTeamCategoryID == Model.RequisitionTeamCategoryID)
			    }), "Choose...")
			</div>
			<div class="required_tag"></div>
			</div>
				<div class="form-item">
			@Html.LabelFor(model => model.RequisitionTeamUserID)
			<div class="editor-field">
			    @Html.DropDownListFor(model => model.RequisitionTeamUserID, ((IEnumerable<SoftwareGrid.DataLogic.Models.User>)ViewBag.PossibleRequisitionTeamUsers).Select(option => new SelectListItem {
			        Text = (option == null ? "None" : option.LastName), 
			        Value = option.UserID.ToString(),
			        Selected = (Model != null) && (option.UserID == Model.RequisitionTeamUserID)
			    }), "Choose...")
			</div>
			<div class="required_tag"></div>
			</div>
				
		<div class="form-item">
            @Html.LabelFor(model => model.IsPrimaryRequisitionOwner)
            <div>
								@Html.EditorFor(model => model.IsPrimaryRequisitionOwner)
				            </div>
					
			<div class="required_tag"></div>
					</div>
	
		<div class="form-item">
			<div class="button_bar clearfix">
				<button class="green" type="submit">
						<span>Submit</span>
				</button>
			</div>
		</div>
	</fieldset>
