@model SoftwareGrid.DataLogic.Models.RequisitionNote

@{
    ViewBag.Title = "Requisition Note";
    Layout = "_LayoutRequisition";
}
<div class="flat_area grid_16">
    <h2>
        Requisition Note</h2>
</div>
<div class="box grid_16">
    <div class="block">
        <h2 class="box_head">
            Are you sure you want to delete this?</h2>
@using (Html.BeginForm()) {
	<fieldset>
				<div class="form-item">
		    <label>Date</label>
		    <div class="display-field">@String.Format("{0:g}", Model.Date)</div>
		</div>
				<div class="form-item">
		    <label>Notes</label>
		    <div class="display-field">@Model.Notes</div>
		</div>
				<div class="form-item">
		    <label>User</label>
		    <div class="display-field">@(Model.User == null ? "None" : Model.User.LastName)</div>
		</div>
				<div class="form-item">
		    <label>Requisition</label>
		    <div class="display-field">@Html.DisplayTextFor(_ => Model.Requisition).ToString()</div>
		</div>
				<div class="form-item">
	<div class="button_bar clearfix">
			<button class="green" type="submit">
				<span>Delete</span>
			</button>
		</div>
	</div>
	</fieldset>
}
	</div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
	
