@model SoftwareGrid.DataLogic.Models.RequisitionPublishInfo

@{
    ViewBag.Title = "Requisition Publish Info";
    Layout = "_LayoutRequisition";
}
<div class="flat_area grid_16">
    <h2>
        Requisition Publish Info</h2>
</div>
<div class="box grid_16">
    <div class="block">
        <h2 class="box_head">
            Are you sure you want to delete this?</h2>
@using (Html.BeginForm()) {
	<fieldset>
				<div class="form-item">
		    <label>PublishDate</label>
		    <div class="display-field">@String.Format("{0:g}", Model.PublishDate)</div>
		</div>
				<div class="form-item">
		    <label>ExpireDate</label>
		    <div class="display-field">@String.Format("{0:g}", Model.ExpireDate)</div>
		</div>
				<div class="form-item">
		    <label>IsPublishedToCareerPortal</label>
		    <div class="display-field">@Model.IsPublishedToCareerPortal</div>
		</div>
				<div class="form-item">
		    <label>IsPublishedToVendorPortal</label>
		    <div class="display-field">@Model.IsPublishedToVendorPortal</div>
		</div>
				<div class="form-item">
		    <label>Requisition</label>
		    <div class="display-field">@Html.DisplayTextFor(_ => Model.Requisition).ToString()</div>
		</div>
				<div class="form-item">
	<div class="button_bar clearfix">
			<button class="green" type="submit">
				<span>Delete</span>
			</button>
		</div>
	</div>
	</fieldset>
}
	</div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
	
