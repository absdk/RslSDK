@model IEnumerable<SoftwareGrid.DataLogic.Models.Account>
@using EasySoft.Helper;
@{
    ViewBag.Title = "Account";
}
<div class="flat_area grid_16">
    <h2>Account List</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
</div>
<div style="clear:both;"></div>
<div class="box grid_16">
@(Html.Telerik().Grid(Model)
    .Name("Grid")
    .DataKeys(keys => keys.Add(c => c.AccountID))
    .Columns(columns =>
                    {   
                        columns.AutoGenerate(column =>
                                                {
                                                    if (column.Member == "AccountID")
                                                        column.Visible = false;
                                                });
						columns.Template(
							                @<text>
							                    <center>
							                        <a href="@Url.Action("Edit", "Account", new { id = @item.AccountID })" title="Edit"><img alt="Edit"  src="/content/images/edit.png" /></a>
							                    </center>
							                </text>
							            ).HeaderTemplate(
							                @<text>
							                    <center>
							                        <span>Edit</span>
							                    </center>
							                </text>
							            ).Width("10px");
							            columns.Template(
							                @<text>
							                    <center>
							                        <a href="/Account/Delete/@item.AccountID" title="Delete" onclick="return confirmSubmit()"><img alt="Edit"  src="/content/images/delete.png" /></a>
							                    </center>
							                </text>
							            ).HeaderTemplate(
							                @<text>
							                    <center>
							                        <span>Delete</span>
							                    </center>
							                </text>
							            ).Width("10px");
                    })
    .Sortable()
    .Pageable()
) 
</div>

