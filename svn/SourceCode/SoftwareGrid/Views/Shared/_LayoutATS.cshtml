<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>@*CSS*@
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="../../Content/themes/grid.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/themes/main.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/themes/reset.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/themes/text.css" rel="stylesheet" type="text/css" />
    <link href="../../Content/themes/theme_base.css" rel="stylesheet" type="text/css" />
    
    @*JavaScript*@
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
    <script src="../../Scripts/modernizr-1.7.min.js" type="text/javascript"></script>
    <script src="../../Scripts/adminica_ui.js" type="text/javascript"></script>
    <script type="text/javascript" src="http://jqueryjs.googlecode.com/files/jquery-1.3.2.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".trigger").click(function () {
                $("#sidebar").toggle("slow");
                $(this).toggleClass("active");
                return false;
            });
            $('#hideh1').click(function () {
                $("#sidebar").hide();
            });
        });
    </script>
</head>
<body style="background-image: url(../../Content/themes/base/images/bg_wood.jpg); repeat fixed; position: relative; float: left; width: 100%;">
    <a class="trigger">
        <img src="../../Content/themes/base/images/logoSign.png" />
    </a>
    <div id="wrapper">
        <!-- #topbar -->
        <div id="sidebar" style="display: none;">
            <div class="hide">
                +</div>           
                <img id="hideh1" src="../../Content/themes/base/images/logo.png" style="z-index: 10; margin-top: 12px;" />
          
            <div class="user_box dark_box clearfix">
                <img src="@Url.Content("../../Content/themes/base/images/profile.jpg")" width="55" alt="Profile Pic"/>
                <h2>
                </h2>
                <h3>
                    @User.Identity.Name
                </h3>
                <ul>
                    <li>settings<span class="divider">|</span></li>
                    <li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            @Html.ActionLink("Log Out", "LogOut", "Account")
                        }
                        else
                        {
                            @Html.ActionLink("Log On", "LogOn", "Account")
                        }
                    </li>
                </ul>
            </div>
            <!-- #user_box -->
            <ul class="side_accordion">
                <!-- add class 'open_multiple' to change to from accordion to toggles -->
                <li class="has_drawer"><a href="#">
                    <img src="../../Content/themes/base/images/home.png" />
                    Home</a>
                    <ul class="drawer">
                        <li><a href="#">Activity</a></li>
                        <li><a href="#">Events</a></li>
                        <li><a href="#">Tasks</a></li>
                    </ul>
                </li>
                <li class="has_drawer"><a href="#">
                    <img src="../../Content/themes/base/images/mail.png" />
                    Mailbox@*<span class="alert badge alert_red">5</span>*@</a>
                    <ul class="drawer">
                        <li><a href="#">Inbox</a></li>
                        <li><a href="#">Sent Items</a></li>
                        <li><a href="#">Drafts</a></li>
                        <li><a href="#">Trash</a></li>
                    </ul>
                </li>
                <li class="has_drawer"><a href="#">
                    <img src="../../Content/themes/base/images/documents.png" />
                    Documents</a>
                    <ul class="drawer">
                        <li><a href="#">Create New</a></li>
                        <li><a href="#">View All</a></li>
                        <li><a href="#">Upload/Download</a></li>
                    </ul>
                </li>
                <li class="has_drawer"><a href="#">
                    <img src="../../Content/themes/base/images/users.png">Members</a>
                    <ul class="drawer">
                        <li><a href="#">Add New</a></li>
                        <li><a href="#">Edit/Delete</a></li>
                        <li><a href="#">Search Profiles</a></li>
                    </ul>
                </li>
                <li><a href="#">
                    <img src="../../Content/themes/base/images/graph.png">Statistics</a></li>
                <li class="has_drawer"><a href="#">
                    <img src="../../Content/themes/base/images/cog_2.png">Settings</a>
                    <ul class="drawer">
                        <li><a href="#">Account</a></li>
                        <li><a href="#">System</a></li>
                    </ul>
                </li>
            </ul>
            <ul id="side_links" class="side_links" style="margin-bottom: 0;">
                <li><a href="#">Online Documentation</a> </li>
                <li><a href="#">Expert Forum</a></li>
                <li><a href="#">Product Wiki</a></li>
                <li><a href="#">Latest Company News</a></li>
            </ul>
        </div>
        <!-- #sidebar -->
        <div id="container">
            <div id="main_container" class="main_container container_16 clearfix ui-sortable">
                <div id="nav_top" class="clearfix round_top" style="opacity: 1;">
                    <ul class="clearfix">
                        <li class="current icon_only"><a href="#">
                            <img src="../../Content/themes/base/images/laptop.png"><span class="display_none">Home</span></a></li>
                        <li class="has_dropdown"><a href="#">
                            <img src="../../Content/themes/base/images/frames.png"><span>Layout</span></a>
                            <ul class="dropdown">
                                <li><a href="#"><span>16 Grid - 960.gs</span></a></li>
                                <li><a href="#"><span>Text &amp; Typography</span></a></li>
                                <li class="has_drawer"><a class="hide_mobile" href="#"><span>Layout Width</span></a>
                                    <ul class="drawer" style="display: none;">
                                        <li><a href="#"><span>Fixed</span></a></li>
                                        <li><a href="#"><span>Fluid</span></a></li>
                                    </ul>
                                </li>
                                <li class="has_drawer open"><a class="hide_mobile" href="#"><span>Layout Position</span></a>
                                    <ul class="drawer" style="display: block;">
                                        <li><a href="#"><span>Side</span></a></li>
                                        <li><a href="#"><span>Top</span></a></li>
                                        <li><a href="#"><span>Slide</span></a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class="has_dropdown"><a href="#">
                            <img src="../../Content/themes/base/images/coverflow.png"><span>Boxes</span></a>
                            <ul class="dropdown">
                                <li><a href="#"><span>Tab Boxes</span></a></li>
                                <li><a href="#"><span>Accordions Boxes</span></a></li>
                                <li><a href="#"><span>Step by Step Wizard</span></a></li>
                                <li><a href="#"><span>Code View</span></a></li>
                            </ul>
                        </li>
                        <li class="has_dropdown"><a href="#">
                            <img src="../../Content/themes/base/images/create_write.png"><span>Forms</span></a>
                            <ul class="dropdown">
                                <li><a href="#"><span>Input Fields</span></a></li>
                                <li><a href="#"><span>Buttons</span></a></li>
                                <li class="has_drawer"><a href="#"><span>More components</span></a>
                                    <ul class="drawer">
                                        <li><a href="#"><span>Validation</span></a></li>
                                        <li><a href="#"><span>WYSIWYG Editor</span></a></li>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                        <li class=""><a href="#">
                            <img src="../../Content/themes/base/images/images.png"><span>Gallery</span></a></li>
                        <li class="has_dropdown"><a href="#">
                            <img src="../../Content/themes/base/images/blocks_images.png"><span>Tables</span></a>
                            <ul class="dropdown">
                                <li><a href="#"><span>DataTables</span></a></li>
                                <li><a href="#"><span>Regular Tables</span></a></li>
                            </ul>
                        </li>
                        <li class="has_dropdown"><a href="#">
                            <img src="../../Content/themes/base/images/file_cabinet.png"><span>Org</span></a>
                            <ul class="dropdown">
                                <li><a href="#">
                                    <img src="../../Content/themes/base/images/folder.png"><span>Files</span></a></li>
                                <li><a href="#">
                                    <img src="../../Content/themes/base/images/users.png"><span>Contacts</span></a></li>
                            </ul>
                        </li>
                        <li class=""><a href="#">
                            <img src="../../Content/themes/base/images/month_calendar.png"><span>Cal</span></a></li>
                        <li class=""><a href="#">
                            <img src="../../Content/themes/base/images/graph.png"><span>Charts</span></a></li>
                        <li class="icon_only has_dropdown"><a href="#">
                            <img src="../../Content/themes/base/images/locked_2.png"><span class="display_none">Login</span></a>
                            <ul class="dropdown_right dropdown">
                                <li><a href="#" class="dialog_button" data-dialog="logout"><span>Regular Login</span></a></li>
                                <li><a href="#" class="dialog_button" data-dialog="logout"><span>Slide Login</span></a></li>
                            </ul>
                        </li>
                    </ul>
                    <div class="display_none">
                    </div>
                </div>
                <!-- #nav_top -->
                <div class="flat_area grid_10" style="opacity: 1;">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @*  @(Html.Telerik().ScriptRegistrar().DefaultGroup(group => group.Combined(true).Compress(true)))*@
</body>
</html>
