@model IEnumerable<SoftwareGrid.DataLogic.Models.OrganizationDepartment>
@using EasySoft.Helper;
@{
    ViewBag.Title = "Organization Department";
    Layout = "~/Views/Shared/_LayoutOrganization.cshtml";
}
<div class="flat_area grid_16">
    <h2>Organization Department List</h2>
    <p>
			@Html.ActionLink("Create New", "Create",new { organizationId = ViewBag.OrganizationId })
	    </p>
</div>
<div style="clear:both;"></div>
<div class="box grid_16">
@(Html.Telerik().Grid(Model)
        .Name("Grid")
		.DataKeys(keys => keys.Add(c => c.OrganizationDepartmentID))
		.Columns(columns =>
        {
		columns.Bound(c => c.DepartmentName).Title("Department name").Width("20%").Sortable(true).Groupable(true).Filterable(true); 
				columns.Bound(c => c.ParentDepartment.Name).Title("Parent Department").Width("20%").Sortable(true).Groupable(true).Filterable(true); 
				columns.Bound(c => c.OrganizationBusinessDivision.Name).Title("Business Division").Width("20%").Sortable(true).Groupable(true).Filterable(true); 
				columns.Bound(c => c.DepartmentCodeNumber).Title("Department Code Number").Width("15%").Sortable(true).Groupable(true).Filterable(true); 
				columns.Bound(c => c.DepartmentNumber).Title("Department Sequence Number").Width("15%").Sortable(true).Groupable(true).Filterable(true); 
				columns.Template(
                @<text>
                    <center>
													<a href="@Url.Action("Edit", "OrganizationDepartment", new { id = @item.OrganizationDepartmentID,organizationId = ViewBag.OrganizationId })" title="Edit"><img alt="Edit"  src="/content/images/edit.png" /></a>
						                    </center>
                </text>
            ).HeaderTemplate(
                @<text>
                    <center>
                        <span>Edit</span>
                    </center>
                </text>
            ).Width("20px");
            columns.Template(
                @<text>
                    <center>
													<a href="@Url.Action("Delete", "OrganizationDepartment", new { id = @item.OrganizationDepartmentID,organizationId = ViewBag.OrganizationId })" title="Delete"><img alt="Delete"  src="/content/images/delete.png" /></a>
						                    </center>
                </text>
            ).HeaderTemplate(
                @<text>
                    <center>
                        <span>Delete</span>
                    </center>
                </text>
            ).Width("20px");
		})
		.Scrollable(scrolling => scrolling.Enabled(true))
        .Sortable(sorting => sorting.Enabled(true))
        .Pageable(paging => paging.Enabled(true))
        .Filterable(filtering => filtering.Filters(filters => 
        {
			        }))
        .Groupable(grouping => grouping.Enabled(true))
        .Footer(true)
)
</div>

