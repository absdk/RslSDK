
@model SoftwareGrid.DataLogic.Models.SkillsExpEduCategory

@* This partial view defines form fields that will appear when creating and editing entities *@

	<fieldset>
		@Html.ValidationSummary()
		<div class="form-item">
			@Html.LabelFor(model => model.ParentSkillsExpEduCategoryID)
			<div class="editor-field">
			    @Html.DropDownListFor(model => model.ParentSkillsExpEduCategoryID, ((IEnumerable<SoftwareGrid.DataLogic.Models.SkillsExpEduCategory>)ViewBag.PossibleParentSkillsExpEduCategories).Select(option => new SelectListItem {
			        Text = (option == null ? "None" : option.Name), 
			        Value = option.SkillsExpEduCategoryID.ToString(),
			        Selected = (Model != null) && (option.SkillsExpEduCategoryID == Model.ParentSkillsExpEduCategoryID)
			    }), "Choose...")
			</div>
			</div>
				
		<div class="form-item">
            @Html.LabelFor(model => model.Name)
            <div>
								@Html.EditorFor(model => model.Name)
				            </div>
					
			<div class="required_tag"></div>
					</div>
	
		<div class="form-item">
			<div class="button_bar clearfix">
				<button class="green" type="submit">
						<span>Submit</span>
				</button>
			</div>
		</div>
	</fieldset>
