
@model SoftwareGrid.DataLogic.Models.ContactFolderOwner

@* This partial view defines form fields that will appear when creating and editing entities *@

	<fieldset>
		@Html.ValidationSummary()
		<div class="form-item">
			@Html.LabelFor(model => model.ContactFolderID)
			<div class="editor-field">
			    @Html.DropDownListFor(model => model.ContactFolderID, ((IEnumerable<SoftwareGrid.DataLogic.Models.ContactFolder>)ViewBag.PossibleContactFolders).Select(option => new SelectListItem {
			        Text = Html.DisplayTextFor(_ => option).ToString(), 
			        Value = option.ContactFolderID.ToString(),
			        Selected = (Model != null) && (option.ContactFolderID == Model.ContactFolderID)
			    }), "Choose...")
			</div>
			<div class="required_tag"></div>
			</div>
				<div class="form-item">
			@Html.LabelFor(model => model.ShareWithUserID)
			<div class="editor-field">
			    @Html.DropDownListFor(model => model.ShareWithUserID, ((IEnumerable<SoftwareGrid.DataLogic.Models.User>)ViewBag.PossibleShareWithUsers).Select(option => new SelectListItem {
			        Text = (option == null ? "None" : option.LastName), 
			        Value = option.UserID.ToString(),
			        Selected = (Model != null) && (option.UserID == Model.ShareWithUserID)
			    }), "Choose...")
			</div>
			<div class="required_tag"></div>
			</div>
				
		<div class="form-item">
            @Html.LabelFor(model => model.AddedDate)
            <div>
								@Html.EditorFor(model => model.AddedDate)
				            </div>
					
			<div class="required_tag"></div>
					</div>
	
		<div class="form-item">
			<div class="button_bar clearfix">
				<button class="green" type="submit">
						<span>Submit</span>
				</button>
			</div>
		</div>
	</fieldset>
