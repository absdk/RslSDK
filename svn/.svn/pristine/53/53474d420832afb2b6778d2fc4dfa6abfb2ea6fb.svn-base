@model SoftwareGrid.DataLogic.Models.VendorServiceCapabilityRating
@* This partial view defines form fields that will appear when creating and editing entities *@
<fieldset>
    @Html.ValidationSummary()
    <div class="form-item">
        @Html.LabelFor(model => model.VendorServiceCategoryID)
        <div class="editor-field">
            @Html.DropDownListFor(model => model.VendorServiceCategoryID, ((IEnumerable<SoftwareGrid.DataLogic.Models.VendorServiceCategory>)ViewBag.PossibleVendorServiceCategories).Select(option => new SelectListItem
       {
           Text = (option == null ? "None" : option.Name),
           Value = option.VendorServiceCategoryID.ToString(),
           Selected = (Model != null) && (option.VendorServiceCategoryID == Model.VendorServiceCategoryID)
       }), "Choose...")
        </div>
    </div>
    <div class="form-item">
        @Html.LabelFor(model => model.Description)
        <div>
            @Html.EditorFor(model => model.Description)
        </div>
    </div>
    <div class="form-item">
        @Html.LabelFor(model => model.VendorServiceRatingScaleID)
        <div class="editor-field">
            @Html.DropDownListFor(model => model.VendorServiceRatingScaleID, ((IEnumerable<SoftwareGrid.DataLogic.Models.RatingScale>)ViewBag.PossibleVendorServiceRatingScales).Select(option => new SelectListItem
       {
           Text = (option == null ? "None" : option.Name),
           Value = option.RatingScaleID.ToString(),
           Selected = (Model != null) && (option.RatingScaleID == Model.VendorServiceRatingScaleID)
       }), "Choose...")
        </div>
    </div>
    <div class="form-item">
        @Html.LabelFor(model => model.RatingRemarks)
        <div>
            @Html.EditorFor(model => model.RatingRemarks)
        </div>
    </div>
    <div class="form-item">
        <div class="button_bar clearfix">
            <button class="green" type="submit">
                <span>Submit</span>
            </button>
        </div>
    </div>
</fieldset>
