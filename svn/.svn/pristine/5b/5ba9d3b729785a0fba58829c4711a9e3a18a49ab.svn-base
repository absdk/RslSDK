@model SoftwareGrid.DataLogic.Models.ApplicantDisability

@{
    ViewBag.Title = "Applicant Disability";
    Layout = "~/Views/Shared/_LayoutApplicant.cshtml";
}
<div class="flat_area grid_16">
    <h2>
        Applicant Disability</h2>
</div>
<div class="box grid_16">
    <div class="block">
        <h2 class="box_head">
            Are you sure you want to delete this?</h2>
@using (Html.BeginForm()) {
	<fieldset>
				<div class="form-item">
		    <label>Notes</label>
		    <div class="display-field">@Model.Notes</div>
		</div>
				<div class="form-item">
		    <label>Applicant</label>
		    <div class="display-field">@(Model.Applicant == null ? "None" : Model.Applicant.LastName)</div>
		</div>
				<div class="form-item">
		    <label>Disability</label>
		    <div class="display-field">@(Model.Disability == null ? "None" : Model.Disability.Name)</div>
		</div>
				<div class="form-item">
	<div class="button_bar clearfix">
			<button class="green" type="submit">
				<span>Delete</span>
			</button>
		</div>
	</div>
	</fieldset>
}
	</div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
	
