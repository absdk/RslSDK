@model SoftwareGrid.DataLogic.Models.VendorInsurance

@{
    ViewBag.Title = "Vendor Insurance";
    Layout = "~/Views/Shared/_LayoutVMS.cshtml";
}
<div class="flat_area grid_16">
    <h2>
        Vendor Insurance</h2>
</div>
<div class="box grid_16">
    <div class="block">
        <h2 class="box_head">
            Are you sure you want to delete this?</h2>
@using (Html.BeginForm()) {
	<fieldset>
				<div class="form-item">
		    <label>InsuranceProviderCompanyName</label>
		    <div class="display-field">@Model.InsuranceProviderCompanyName</div>
		</div>
				<div class="form-item">
		    <label>InsuranceProviderPhoneName</label>
		    <div class="display-field">@Model.InsuranceProviderPhoneName</div>
		</div>
				<div class="form-item">
		    <label>InsuranceNumber</label>
		    <div class="display-field">@Model.InsuranceNumber</div>
		</div>
				<div class="form-item">
		    <label>CertificateIssueDate</label>
		    <div class="display-field">@String.Format("{0:g}", Model.CertificateIssueDate)</div>
		</div>
				<div class="form-item">
		    <label>CertificationExpireDate</label>
		    <div class="display-field">@String.Format("{0:g}", Model.CertificationExpireDate)</div>
		</div>
				<div class="form-item">
		    <label>InsuranceCoverageInformation</label>
		    <div class="display-field">@Model.InsuranceCoverageInformation</div>
		</div>
				<div class="form-item">
		    <label>IsVerified</label>
		    <div class="display-field">@Model.IsVerified</div>
		</div>
				<div class="form-item">
		    <label>Vendor</label>
		    <div class="display-field">@Html.DisplayTextFor(_ => Model.Vendor).ToString()</div>
		</div>
				<div class="form-item">
		    <label>VendorInsuranceCategory</label>
		    <div class="display-field">@(Model.VendorInsuranceCategory == null ? "None" : Model.VendorInsuranceCategory.Name)</div>
		</div>
				<div class="form-item">
	<div class="button_bar clearfix">
			<button class="green" type="submit">
				<span>Delete</span>
			</button>
		</div>
	</div>
	</fieldset>
}
	</div>
</div>
<p>
	@Html.ActionLink("Back to List", "Index",new { vendorId = ViewBag.VendorId })
</p>
	
